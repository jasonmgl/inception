server {
    listen 80;
    return 301 https://$host$request_uri;  # Redirect HTTP to HTTPS
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name jmougel.42.fr;

    root /var/www/html/;

    index index.html;

    ssl_certificate "/etc/nginx/ssl/jmougel.crt";
    ssl_certificate_key "/etc/nginx/ssl/jmougel.key";

    ssl_protocols TLSv1.2 TLSv1.3;

    location / {
        try_files $uri $uri/ =404;
    }
}